<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <!-- DataSources -->
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close">
        <property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
        <property name="url" value
                ="jdbc:hsqldb:file:database.dat;shutdown=true"/>
        <property name="username" value="sa"/>
        <property name="password" value=""/>
    </bean>
    <!-- Templates -->
    <bean id="jdbcTemplate"
          class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="customerDao" class="com.yrgo.dataaccess.CustomerDaoJdbcTemplateImpl"
          init-method="createTables">
        <constructor-arg ref="jdbcTemplate">
        </constructor-arg>
    </bean>
    <bean id="customerService" class="com.yrgo.services.customers.CustomerManagementServiceProductionImpl">
		<constructor-arg ref="customerDao">
		</constructor-arg>
	</bean>
    <bean id="actionDao" class="com.yrgo.dataaccess.ActionDaoJdbcImpl"
        init-method="createTables">
        <constructor-arg ref="jdbcTemplate">
        </constructor-arg>

    </bean>
    <bean id="callService" class="com.yrgo.services.calls.CallHandlingServiceProductionImpl">
        <constructor-arg ref="customerService">
        </constructor-arg>
        <constructor-arg ref="actionDao">
        </constructor-arg>
        <constructor-arg ref="diaryService">
        </constructor-arg>
    </bean>
    <bean id="diaryService" class="com.yrgo.services.diary.DiaryManagementServiceProductionImpl">
        <constructor-arg ref="actionDao">
        </constructor-arg>
    </bean>
</beans>
